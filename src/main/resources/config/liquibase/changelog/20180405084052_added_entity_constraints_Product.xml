<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Product.
    -->
    <changeSet id="20180405084052-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="opportunity_id"
                                 baseTableName="product"
                                 constraintName="fk_product_opportunity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="opportunity"/>

        <addForeignKeyConstraint baseColumnNames="product_stock_id"
                                 baseTableName="product"
                                 constraintName="fk_product_product_stock_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product_stock"/>

    </changeSet>
</databaseChangeLog>
