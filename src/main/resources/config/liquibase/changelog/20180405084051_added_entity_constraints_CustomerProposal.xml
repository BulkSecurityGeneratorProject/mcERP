<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity CustomerProposal.
    -->
    <changeSet id="20180405084051-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="customer_proposal"
                                 constraintName="fk_customer_proposal_customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="customer"/>

        <addForeignKeyConstraint baseColumnNames="opportunity_id"
                                 baseTableName="customer_proposal"
                                 constraintName="fk_customer_proposal_opportunity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="opportunity"/>

    </changeSet>
</databaseChangeLog>
